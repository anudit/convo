{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/components/*": [
                "components/*"
            ],
            "@/lib/*": [
                "lib/*"
            ],
            "@/styles/*": [
                "styles/*"
            ],
            "@/public/*": [
                "public/*"
            ],
            "@/utils/*": [
                "utils/*"
            ],
            "@/hooks/*": [
                "hooks/*"
            ],
            "@/contexts/*": [
                "contexts/*"
            ],
            "@/middlewares/*": [
                "middlewares/*"
            ],
        }
    },
    "exclude": [
        ".git",
        ".npm",
        "dist",
        "dist*",
        "node_modules",
        "**/dist/*",
        "**/node_modules/*",
    ]
}
