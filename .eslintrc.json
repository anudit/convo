{
    "settings": {
        "react": {
            "version": "17.0.2"
        }
    },
    "env": {
        "node": true,
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended",
        "plugin:@next/next/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": 0,
        "react/display-name": 0
    },
    "globals": {
        "process": true
    },
    "ignorePatterns": [
        "/pages/test/*.js",
        "/pages/embed/oth/*.js"
    ]
}
